{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "module": "es2015",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "removeComments": false,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "jsx": "preserve"
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
    "src/custom-typings/jsx-globals.detailed.d.ts",
    "src/custom-typings/scss.d.ts",
    "src/custom-typings/webpack.d.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "forkChecker": true,
    "useCache": true
  }
}
